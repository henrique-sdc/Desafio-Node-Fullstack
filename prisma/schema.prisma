generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Local {
  id               Int       @id @default(autoincrement())
  nome             String
  apelido          String?
  tipo             String?
  cnpj             String?

  // Localização
  cidade           String
  estado           String
  cep              String?
  endereco         String
  complemento      String?

  // Contato do Local
  email            String?
  telefone         String?

  // Entradas e catracas
  portoes          String[] 

  // Atualizações e relacionamentos
  updatedAt        DateTime  @updatedAt
  createdAt        DateTime  @default(now())

  eventos          Evento[]
}

model Evento {
  id             Int       @id @default(autoincrement())
  nome           String
  tipo           String?
  data           DateTime
  horario        String
  horarioFim     DateTime

  // Relacionamento com Local
  localId        Int
  local          Local     @relation(fields: [localId], references: [id])

  // Portões cadastrados
  portoes        String[]

  // Contato do Evento
  email          String?
  telefone       String?

  createdAt      DateTime  @default(now())

  @@unique([localId, data, horario])
}